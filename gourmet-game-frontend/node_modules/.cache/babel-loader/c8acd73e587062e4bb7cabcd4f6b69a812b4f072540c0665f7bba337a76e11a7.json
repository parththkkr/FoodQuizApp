{"ast":null,"code":"import axios from 'axios';\nimport Modal from './Modal.vue'; // Import your modal component\n\nexport default {\n  name: 'App',\n  components: {\n    Modal\n  },\n  data() {\n    return {\n      question: {},\n      selectedAnswer: '',\n      correctAnswer: '',\n      modalVisible: false,\n      modalMessage: ''\n    };\n  },\n  created() {\n    this.fetchQuestion();\n  },\n  methods: {\n    async fetchQuestion() {\n      try {\n        const response = await axios.get('http://localhost:3000/api/game/start');\n        this.question = response.data;\n      } catch (error) {\n        console.error(error);\n      }\n    },\n    async submitAnswer() {\n      try {\n        const response = await axios.post('http://localhost:3000/api/game/answer', {\n          id: this.question._id,\n          answer: this.selectedAnswer\n        });\n        const isCorrect = response.data.correct;\n        if (!isCorrect) {\n          this.correctAnswer = response.data.correctAnswer;\n          this.modalMessage = `Wrong! The correct answer is: ${this.correctAnswer}`;\n          this.modalVisible = true; // Show the modal\n        } else {\n          this.modalMessage = 'Correct!';\n          this.modalVisible = true; // Show the modal\n        }\n        this.fetchQuestion(); // Fetch new question\n        this.selectedAnswer = ''; // Clear selected answer\n      } catch (error) {\n        console.error(error);\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","Modal","name","components","data","question","selectedAnswer","correctAnswer","modalVisible","modalMessage","created","fetchQuestion","methods","response","get","error","console","submitAnswer","post","id","_id","answer","isCorrect","correct"],"sources":["/home/parth/Desktop/game_app/gourmet-game-frontend/src/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <div class=\"game-container\">\n      <h2>{{ question.question }}</h2>\n      <img :src=\"question.image\" alt=\"Dish Image\" class=\"dish-image\">\n      <p>{{ question.description }}</p>\n      <div v-for=\"(answer, index) in question.answers\" :key=\"index\" class=\"answer-option\">\n        <input type=\"radio\" :id=\"answer\" v-model=\"selectedAnswer\" :value=\"answer\">\n        <label :for=\"answer\">{{ answer }}</label>\n      </div>\n      <button @click=\"submitAnswer\">Submit</button>\n    </div>\n    <modal :message=\"modalMessage\" :show-modal=\"modalVisible\" @close=\"modalVisible = false\" />\n  </div>\n</template>\n\n<script>\nimport axios from 'axios';\nimport Modal from './Modal.vue'; // Import your modal component\n\nexport default {\n  name: 'App',\n  components: {\n    Modal\n  },\n  data() {\n    return {\n      question: {},\n      selectedAnswer: '',\n      correctAnswer: '',\n      modalVisible: false,\n      modalMessage: ''\n    };\n  },\n  created() {\n    this.fetchQuestion();\n  },\n  methods: {\n    async fetchQuestion() {\n      try {\n        const response = await axios.get('http://localhost:3000/api/game/start');\n        this.question = response.data;\n      } catch (error) {\n        console.error(error);\n      }\n    },\n    async submitAnswer() {\n      try {\n        const response = await axios.post('http://localhost:3000/api/game/answer', {\n          id: this.question._id,\n          answer: this.selectedAnswer\n        });\n        const isCorrect = response.data.correct;\n        if (!isCorrect) {\n          this.correctAnswer = response.data.correctAnswer;\n          this.modalMessage = `Wrong! The correct answer is: ${this.correctAnswer}`;\n          this.modalVisible = true; // Show the modal\n        } else {\n          this.modalMessage = 'Correct!';\n          this.modalVisible = true; // Show the modal\n        }\n        this.fetchQuestion(); // Fetch new question\n        this.selectedAnswer = ''; // Clear selected answer\n      } catch (error) {\n        console.error(error);\n      }\n    }\n  }\n};\n</script>\n\n<style scoped>\n.game-container {\n  max-width: 800px;\n  margin: 0 auto;\n  padding: 20px;\n}\n\n.dish-image {\n  /* max-width: 100%; */\n  height: 150px;\n  width: 150px;\n  margin-bottom: 10px;\n}\n\n.answer-option {\n  margin-bottom: 10px;\n}\n\nbutton {\n  display: block;\n  margin: 20px auto;\n  padding: 10px 20px;\n  font-size: 16px;\n  cursor: pointer;\n}\n\n@media (max-width: 600px) {\n  .game-container {\n    padding: 10px;\n  }\n\n  button {\n    font-size: 14px;\n  }\n}\n</style>\n"],"mappings":"AAiBA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAOC,KAAI,MAAO,aAAa,EAAE;;AAEjC,eAAe;EACbC,IAAI,EAAE,KAAK;EACXC,UAAU,EAAE;IACVF;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,CAAC,CAAC;MACZC,cAAc,EAAE,EAAE;MAClBC,aAAa,EAAE,EAAE;MACjBC,YAAY,EAAE,KAAK;MACnBC,YAAY,EAAE;IAChB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,aAAa,CAAC,CAAC;EACtB,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,aAAaA,CAAA,EAAG;MACpB,IAAI;QACF,MAAME,QAAO,GAAI,MAAMb,KAAK,CAACc,GAAG,CAAC,sCAAsC,CAAC;QACxE,IAAI,CAACT,QAAO,GAAIQ,QAAQ,CAACT,IAAI;MAC/B,EAAE,OAAOW,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAACA,KAAK,CAAC;MACtB;IACF,CAAC;IACD,MAAME,YAAYA,CAAA,EAAG;MACnB,IAAI;QACF,MAAMJ,QAAO,GAAI,MAAMb,KAAK,CAACkB,IAAI,CAAC,uCAAuC,EAAE;UACzEC,EAAE,EAAE,IAAI,CAACd,QAAQ,CAACe,GAAG;UACrBC,MAAM,EAAE,IAAI,CAACf;QACf,CAAC,CAAC;QACF,MAAMgB,SAAQ,GAAIT,QAAQ,CAACT,IAAI,CAACmB,OAAO;QACvC,IAAI,CAACD,SAAS,EAAE;UACd,IAAI,CAACf,aAAY,GAAIM,QAAQ,CAACT,IAAI,CAACG,aAAa;UAChD,IAAI,CAACE,YAAW,GAAK,iCAAgC,IAAI,CAACF,aAAc,EAAC;UACzE,IAAI,CAACC,YAAW,GAAI,IAAI,EAAE;QAC5B,OAAO;UACL,IAAI,CAACC,YAAW,GAAI,UAAU;UAC9B,IAAI,CAACD,YAAW,GAAI,IAAI,EAAE;QAC5B;QACA,IAAI,CAACG,aAAa,CAAC,CAAC,EAAE;QACtB,IAAI,CAACL,cAAa,GAAI,EAAE,EAAE;MAC5B,EAAE,OAAOS,KAAK,EAAE;QACdC,OAAO,CAACD,KAAK,CAACA,KAAK,CAAC;MACtB;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}